@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers

@model IEnumerable<HealthInsurance>


@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<head>
    <link rel="stylesheet" href="~/css/CareerCenter.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/DataTable.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/form.css" asp-append-version="true" />

</head>

<div id="back-buttons"></div>

<section class="CareerCenter-Content">

    <div class="left-section both-sides">
        <div class="widget-left-side widgets-shared">

            <div class="widgetHeader">
                <div class="Icon-text">
                    <img src="~/img/CareerCenter/HealthInsurance.png" height="45px" alt="">
                    <p>Health Insurance</p>
                </div>
                <div class="check-all-btn">
                    <a asp-action="Health_Insurance_Approval" asp-controller="Careercenter" id="check-all">Check all &#x2192;</a>
                    <input type="text" id="searchInput" placeholder="Search...">
                </div>

            </div>
            <div class="DataTable">

                <table id="studentTable">
                    <thead>
                        <tr>
                            <th class="indexth-student" onclick="sortTable(0)">
                                Student Name

                                <img id="nameSort" class="sort rotateImage"
                                     src="~/img/CareerCenter/arrowUp.png" alt="">
                            </th>

                            <th class="indexth-student" onclick="sortTable(1)">
                                Student ID

                                <img class="sort rotateImage" id="idSort"
                                     src="~/img/CareerCenter/arrowUp.png" alt="">

                            </th>

                            <th class="indexth" onclick="sortTable(2)">
                                State
                                <img id="stateSort" class="sort rotateImage"
                                     src="~/img/CareerCenter/arrowUp.png" alt="">
                            </th>
                          @*  <th class="center">Upload</th>*@
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var applicationForm in Model.Take(4))
                        {
                            <tr>
                                <td>@applicationForm.Student.Name</td>

                                <td>@applicationForm.Student.StudentId</td>

                                <td class="center state @(applicationForm.Student.Status == "Pending" ? "NA" : (applicationForm.Student.Status == "Completed" ? "pending" : "NA"))">
                                    <div>@(applicationForm.Student.Status == "Pending" ? "Awaiting Approval" : (applicationForm.Student.Status == "Completed" ? "Pending" : "N/A"))</div>
                                </td>

                                @*<td class="center">
                                    @if (applicationForm.Student.Status == "Completed")
                                    {
                                        <a class="edit" href="/Coordinator/Coordinator/ApplicationForm_Approvel_Upsert?id=@applicationForm.Id">
                                            <img src="~/img/upload.png" height="20px">
                                        </a>

                                        <a href="@Url.Action("Application_Form_View", "Coordinator", new { applicationFormId = applicationForm.Id })" style="margin-left:1rem;">
                                            <img src="~/img/eye-symbol.png" height="20px" alt="View" class="upload-icon">
                                        </a>
                                    }
                                    else if (applicationForm.Student.Status == "N/A")
                                    {
                                        <span>Not Submitted</span>
                                    }

                                </td>*@

                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>

    <div id="right-widgets" class="right-section-widgets both-sides">

      

        <div class="widgets-shared" id="widget2">
            <div id="old-HealthI-btn" class="widget-right-side">
