    <body>
        <div class="container" style="margin-top: 25px">
            <div class="row" hidden>
                <div class="col-3" hidden>Sender</div>
                <div class="col-4"><input type="text" value="@User.Identity.Name" id="senderEmail" readonly/></div>
            </div>    
            <section class="container">
                <div class="compose-container">
                    <div>
                    <input type="text" placeholder="Recipients" class="recipients" id="receiverEmail">
                        <!-- Bcc button that has a popup -->
                        <input type="text" placeholder="Subject" class="subject" id="chatMessage">
                        <div class="row">
                            <div class="col-6">
                            <input type="button" class="btn send" id="sendMessage" value="Send" />
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-6">
                               <ul id="messagesList"></ul>
                                    @*<div class="msg-card">
                                        <div class="name-box">
                                            <h1 class="card-name"></h1>
                                        </div>
                                        <p class="card-content"></p>
                                    </div>*@
                            </div>
                        </div>
                    </div>
                </div>
            </section>
        </div>
    </body>
