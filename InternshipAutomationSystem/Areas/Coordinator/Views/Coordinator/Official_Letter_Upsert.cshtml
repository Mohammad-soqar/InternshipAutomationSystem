@model Internship.Models.ViewModels.OfficialLetterVM

@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers


<!DOCTYPE html>
<html>
<head>
    <title>Application Form</title>

    <link rel="stylesheet" href="~/css/DataTable.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/form.css" asp-append-version="true" />
</head>
<body>
    <h1>Application Form</h1>

    <form method="post" class="WebForm" asp-action="Official_Letter_Upsert" enctype="multipart/form-data">
        <input asp-for="@Model.OfficialLetters.Id" hidden />

       
        <div>
            <label for="@Model.OfficialLetters.CompanyName"></label>
            <input asp-for="@Model.OfficialLetters.CompanyName" placeholder="If these fileds are empty that means there is a tech problem please check with tech department" />
        </div>
        <div>
            <label for="@Model.OfficialLetters.CompanyEmail"></label>
            <input asp-for="@Model.OfficialLetters.CompanyEmail" placeholder="If these fileds are empty that means there is a tech problem please check with tech department" />
        </div>
        <div>
            <label for="@Model.OfficialLetters.ReceiverName"></label>
            <input asp-for="@Model.OfficialLetters.ReceiverName" placeholder="If these fileds are empty that means there is a tech problem please check with tech department" />
        </div>
        <div>
            <label for="@Model.OfficialLetters.Department"></label>
            <input asp-for="@Model.OfficialLetters.Department"  placeholder="If these fileds are empty that means there is a tech problem please check with tech department"   />
        </div>
        <div>
            <label for="@Model.OfficialLetters.DatePosted"></label>
            <input asp-for="@Model.OfficialLetters.DatePosted"  />
        </div>
        <div>
            
            <input hidden asp-for="@Model.OfficialLetters.OfficialLetterPDF" placeholder="ImageUrl" />
        </div>
        <div hidden class="inputQue">
            <label>Student</label>
            <select asp-for="@Model.OfficialLetters.StudentId" asp-items="@Model.StudentList" class="selectC">
                <option disabled selected>Select Student</option>
            </select>
            <span asp-validation-for="@Model.OfficialLetters.StudentId" class="alert-warning"></span>

        </div>

        <div hidden class="inputQue">
            <label>Internship Coordinator</label>
            <select asp-for="@Model.OfficialLetters.InternshipCoordinatorId" asp-items="@Model.CoordinatorList" class="selectC">
                <option disabled selected>Select Coordinator</option>
            </select>
            <span asp-validation-for="@Model.OfficialLetters.InternshipCoordinatorId" class="alert-warning"></span>

        </div>

        <button type="submit">Submit</button>
    </form>
</body>
</html>

