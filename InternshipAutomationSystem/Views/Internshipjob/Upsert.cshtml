                    </tbody>
                </table>
            </div>

        </div>

        <div class="widgets-shared" id="widget3">
            <div id="Add-Announcement-btn" class="widget-right-side">
                <p>Add New Announcement</p>
                <img src="img/CareerCenter/Notification.png" height="45px" alt="">
            </div>
            <form class="Add-User-Form-invisible" id="Add-User-Form">
                <div class="Two-Inputs-line">
                    <div>
                        <label for="">Full Name</label>
                        <input type="text">
                    </div>

                    <div>
                        <label for="">Email</label>
                        <input type="text">
                    </div>

                </div>

                <div>
                    <label for="">password</label>
                    <textarea name="" id="" cols="30" rows="5"></textarea>

                </div>

                <button>Confirm</button>
            </form>
        </div>

        <div class="widgets-shared" id="widget4">
            <div id="Add-Job-btn" class="widget-right-side">
                <p>Add Internship opportunity</p>
              
                <img src="img/CareerCenter/SuitCase.png" height="45px" alt="">
            </div>
            <form method="post" class="WebForm" asp-action="Upsert" enctype="multipart/form-data">
                <input asp-for="InternshipJob.Id" hidden />
                <input asp-for="InternshipJob.ImageUrl" hidden />
                <div class="Add-User-Form-invisible" id="Add-User-Form">
                    <div class="inputs">

                        <div id="first-slide">
                            <div class="Two-Inputs-line">
                                <div>
                                    <label for="">Job title</label>
                                    <input asp-for="InternshipJob.JobTitle" type="text" placeholder="Job title">

                                </div>
                                <div>
                                    <label for="">Company Name</label>
                                    <input asp-for="InternshipJob.CompanyName" type="text" placeholder="Company Name">
                                </div>

                                <div>
                                    <label for="">Location</label>
                                    <select asp-for="InternshipJob.Location" >
                                        <option disabled selected>Choose location</option>
                                        <option>Istanbul</option>
                                        <option>Ankara</option>
                                    </select>
                                </div>

                            </div>


                            <div class="Two-Inputs-line">

                                <div>
                                    <label for="">Job Type</label>
                                    <select asp-for="InternshipJob.type">
                                        <option disabled selected>Choose type</option>
                                        <option>Part-Time</option>
                                        <option>Full-Time</option>
                                    </select>
                                </div>
                                <div>
                                    <label for="">On-site/Remote</label>
                                    <select asp-for="InternshipJob.Site">
                                        <option disabled selected>Choose On-site or Remote</option>
                                        <option>On-site</option>
                                        <option>Remote</option>
                                    </select>
                                </div>
                            </div>
                        </div>


                        <div id="second-slide">
                            <div class="Two-Inputs-line">
                                <div>
                                    <label for="">DatePosted</label>
                                    <input asp-for="InternshipJob.DatePosted" type="datetime-local" placeholder="Company Name">
                                </div>
                                <div>
                                    <label for="">SkillsReq</label>
                                    <input asp-for="InternshipJob.SkillsReq" type="text" placeholder="Company Name">
                                </div>


                            </div>
                            <div class="Two-Inputs-line nomargin">
                                <div>
                                    <label for="">Description</label>
                                    <textarea asp-for="InternshipJob.Description" placeholder="Company Email"></textarea>
                                </div>
                                <div>
                                    <label for="">Image</label>
                                    <input asp-for="InternshipJob.ImageUrl" type="file" name="file" placeholder="Company Name">
                                 </div>
                            </div>

                        </div>


                    </div>


                    <div class="sendButton">
                        <div class="backButton">
                        </div>
                        <div class="post-btn" id="next-btn">Next</div>
                        <button type="submit" id="post-btn" class="post-btn">Post</button>
                    </div>
                </div>
            </form>
         
        </div>
    </div>
</section>

